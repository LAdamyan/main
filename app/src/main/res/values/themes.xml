<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->

        <item name="colorSecondary">#8EE3DB</item>
        <item name="colorSecondaryVariant">#E00F41</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Java" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/seventy_dp</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:fontFamily">@font/chunk_five_print</item>
    </style>

    <style name="Android">
        <item name="android:textSize">@dimen/seventy_dp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Kotlin">
        <item name="android:textSize">@dimen/smallSize</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:fontFamily">@font/montserrat_italic</item>
    </style>
    <style name="Javascript">
        <item name="android:textSize">@dimen/twenty_five_dp</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>


    <style name="ThemeOverlay.MyApp.Chip.Filter" parent="">
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="checkedIcon">@drawable/ic_baseline_check_24</item>
    </style>

    <style name="chipInput" parent="">
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIcon">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="chipAction" parent="Widget.MaterialComponents.Chip.Action">
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="checkedIcon">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="ThemingChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:checkable">false</item>
        <item name="chipIconTint">@color/purple_200</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="closeIconVisible">true</item>
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeWidth">3dp</item>
        <item name="chipIcon">@drawable/ic_baseline_flatware_24</item>
        <item name="chipStrokeColor">@color/purple</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>



    <style name="RecycleChips" parent="Widget.MaterialComponents.Chip.Entry">

        <item name="android:checkable">false</item>
        <item name="closeIconVisible">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">3dp</item>
        <item name="chipStrokeColor">#0074B2</item>


    </style>




</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:fontFamily="@font/chunk_five_print"
        android:textSize="@dimen/twenty_five_dp"
        android:textColor="@color/light_blue"
        android:layout_marginStart="@dimen/fifty_dp"
        android:layout_marginTop="@dimen/fifty_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_text"
        android:layout_marginStart="@dimen/fifty_dp"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="@id/description"
        >

    </androidx.appcompat.widget.AppCompatTextView>

<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/phone_icon"
    android:layout_width="@dimen/thirty_dp"
    android:layout_height="@dimen/thirty_dp"
    android:src="@drawable/ic_baseline_local_phone_24"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/description_text"
    android:layout_marginTop="@dimen/thirty_dp"
    android:layout_marginStart="@dimen/fifty_dp">

</androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/telephone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/phone_icon"
        app:layout_constraintTop_toBottomOf="@id/description_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/telephone_number"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/twenty_five_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        android:layout_marginStart="@dimen/ninety_dp">

    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/location_icon"
        android:layout_width="@dimen/thirty_dp"
        android:layout_height="@dimen/thirty_dp"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_icon"
        android:layout_marginStart="@dimen/fifty_dp"
        android:layout_marginTop="@dimen/thirty_dp">

    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/location_icon"
        app:layout_constraintTop_toBottomOf="@id/telephone_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/Luang_Prabang_Laos"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/twenty_five_dp"
        android:fontFamily="@font/chunk_five_print"
        android:layout_marginTop="@dimen/thirty_dp"
        android:layout_marginStart="@dimen/ninety_dp">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/google_map"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:src="@drawable/luang_prabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telephone_number">

    </androidx.appcompat.widget.AppCompatImageView>


</androidx.constraintlayout.widget.ConstraintLayout>


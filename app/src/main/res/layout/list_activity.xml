<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/listVew_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_cities"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginEnd="@dimen/_120dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:entries="@array/cities_array"
        app:layout_constraintEnd_toStartOf="@+id/toolbar_settings"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/listVew_toolbar"
        app:layout_constraintStart_toStartOf="@id/listVew_toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar_settings" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/toolbar_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/sixty_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:src="@drawable/ic_baseline_settings_input_composite_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/spinner_cities"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/listView_searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        android:background="@drawable/search_view_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listVew_toolbar"
        app:queryHint="@string/search_by_place_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/ten_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listView_searchBar" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_corner">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/check_circle"
        android:layout_width="@dimen/_200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:src="@drawable/ic_baseline_check_circle_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deleted"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:gravity="center"
        android:text="@string/deleted"
        android:textSize="@dimen/forty_sp"
        app:layout_constraintEnd_toEndOf="@id/check_circle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/check_circle"
        app:layout_constraintTop_toBottomOf="@id/check_circle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deleted_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:gravity="center"
        android:text="@string/your_imiginary_file_has_been"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="@id/deleted"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/deleted"
        app:layout_constraintTop_toBottomOf="@id/deleted" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deleted_message2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/five_dp"
        android:gravity="center"
        android:text="@string/deleted_"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="@id/deleted_message"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/deleted_message"
        app:layout_constraintTop_toBottomOf="@id/deleted_message" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@color/light_green1"
        android:text="@string/ok"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintTop_toBottomOf="@id/deleted_message2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/twenty_dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
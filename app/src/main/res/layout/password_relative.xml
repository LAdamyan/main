<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <androidx.appcompat.widget.AppCompatImageView        android:id="@+id/phone_relative"        android:layout_width="@dimen/hundred_dp"        android:layout_height="@dimen/hundred_dp"        android:layout_centerHorizontal="true"        android:layout_marginTop="50dp"        android:src="@drawable/images">    </androidx.appcompat.widget.AppCompatImageView>    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/new_relative"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/phone_relative"        android:layout_marginStart="@dimen/eighty_dp"        android:layout_marginTop="@dimen/twenty_dp"        android:text="@string/new_password">    </androidx.appcompat.widget.AppCompatTextView>    <androidx.appcompat.widget.AppCompatEditText        android:id="@+id/editText_relative"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/new_relative"        android:layout_centerInParent="true"        android:layout_marginStart="160dp"        android:layout_marginTop="@dimen/twenty_dp">    </androidx.appcompat.widget.AppCompatEditText>    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/current1_relative"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/editText_relative"        android:layout_marginStart="@dimen/eighty_dp"        android:layout_marginTop="@dimen/twenty_dp"        android:text="@string/current_password">    </androidx.appcompat.widget.AppCompatTextView>    <androidx.appcompat.widget.AppCompatEditText        android:id="@+id/editText2_relative"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/current1_relative"        android:layout_centerInParent="true"        android:layout_marginStart="160dp"        android:layout_marginTop="@dimen/twenty_dp">    </androidx.appcompat.widget.AppCompatEditText>    <androidx.appcompat.widget.AppCompatTextView        android:id="@+id/confirm_relative"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/editText2_relative"        android:layout_marginStart="@dimen/eighty_dp"        android:layout_marginTop="@dimen/twenty_dp"        android:text="@string/confirm_password">    </androidx.appcompat.widget.AppCompatTextView>    <androidx.appcompat.widget.AppCompatEditText        android:id="@+id/editText3_relative"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/confirm_relative"        android:layout_centerInParent="true"        android:layout_marginStart="160dp"        android:layout_marginTop="@dimen/twenty_dp">    </androidx.appcompat.widget.AppCompatEditText>    <androidx.appcompat.widget.AppCompatButton        android:id="@+id/button_relative"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@id/editText3_relative"        android:layout_marginStart="@dimen/eighty_dp"        android:layout_marginTop="@dimen/twenty_dp"        android:layout_marginEnd="@dimen/eighty_dp"        android:background="@color/dark_blue"        android:text="@string/save"        android:textColor="@color/white">    </androidx.appcompat.widget.AppCompatButton></RelativeLayout>
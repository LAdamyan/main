<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/listVew_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_cities"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifty_dp"
            android:entries="@array/cities_array" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_200dp"
            android:src="@drawable/ic_baseline_settings_input_composite_24" />

    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/listView_searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listVew_toolbar" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/seventy_dp"
        android:layout_height="@dimen/seventy_dp"
        android:layout_marginStart="@dimen/ten_dp"

        android:background="@drawable/image_radius"
        android:src="@drawable/tomasso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listView_searchBar"
        app:layout_constraintVertical_bias="0.3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/tomasso_trattoria_enoteca"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toBottomOf="@id/listView_searchBar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ninety_dp"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/tomasso_text"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:drawableStart="@drawable/ic_baseline_restaurant_24"
        android:text="@string/restaurants"
        app:layout_constraintBottom_toBottomOf="@+id/request1"
        app:layout_constraintEnd_toStartOf="@id/request1"
        app:layout_constraintStart_toStartOf="@id/textView_text"
        app:layout_constraintTop_toTopOf="@id/request1"
         />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request1"
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="40dp"
        android:background="@drawable/request_background"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/request"
        android:textColor="#F7A356"
        android:layout_marginStart="@dimen/twenty_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/restaurant"
        app:layout_constraintTop_toBottomOf="@id/textView_text"
        app:layout_constraintBottom_toBottomOf="parent
"/>




   </androidx.constraintlayout.widget.ConstraintLayout>

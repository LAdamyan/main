<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image1"
        android:layout_width="@dimen/seventy_dp"
        android:layout_height="@dimen/seventy_dp"
        android:layout_marginStart="@dimen/ten_dp"
        android:background="@drawable/image_radius"
        app:layout_constraintBottom_toBottomOf="@id/textView_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_name"
        app:layout_constraintVertical_bias="0.1"
        tools:src="@drawable/tomasso" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/eighty_dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/tomasso_trattoria_enoteca"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ninety_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/tomasso_text"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/thirty_dp"
         app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintEnd_toStartOf="@+id/restaurant"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/restaurant"
        tools:src="@drawable/ic_baseline_restaurant_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurants"
        android:layout_marginTop="@dimen/fifteen_dp"
        app:layout_constraintBottom_toBottomOf="@+id/request1"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="@+id/request1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/ten_dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request1"
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/seventy_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:background="@drawable/request_background"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/request"
        android:textColor="#F7A356"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/textView_text" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
         android:background="#F2F2F2"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginStart="@dimen/twenty_five_dp"
        android:layout_marginEnd="@dimen/twenty_five_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant"/>



</androidx.constraintlayout.widget.ConstraintLayout>

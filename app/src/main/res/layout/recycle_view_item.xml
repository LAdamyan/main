<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:background="@drawable/image_radius"
        android:src="@drawable/tomasso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/tomasso_trattoria_enoteca"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_text"
        android:layout_width="294dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/twenty_dp"
        android:layout_marginEnd="@dimen/ten_dp"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/tomasso_text"
        android:textSize="@dimen/fifteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/image1"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginStart="@dimen/sixty_dp"
        android:drawableStart="@drawable/ic_baseline_restaurant_24"

        android:text="@string/restaurants"
        app:layout_constraintBottom_toBottomOf="@+id/request1"
        app:layout_constraintEnd_toStartOf="@id/request1"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/textView_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/request1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/request_background"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/request"
        android:textColor="#F7A356"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/restaurant"
        app:layout_constraintTop_toBottomOf="@id/textView_text" />


   </androidx.constraintlayout.widget.ConstraintLayout>

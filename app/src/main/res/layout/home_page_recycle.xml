<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_page_toolbar"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/home_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home"
        android:textSize="@dimen/thirty_sp"
        android:textColor="@color/light_blue3"
        android:layout_marginTop="@dimen/fifteen_dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/home_page_toolbar"
        app:layout_constraintTop_toTopOf="@id/home_page_toolbar"
        app:layout_constraintEnd_toEndOf="@id/home_page_toolbar"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_page_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_page_toolbar"
        />








</androidx.constraintlayout.widget.ConstraintLayout>
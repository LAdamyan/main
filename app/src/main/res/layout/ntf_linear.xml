<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/push_ntf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginStart="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        android:text="@string/push_notifications"
        android:textColor="@color/grey"
        android:textSize="@dimen/twenty_sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/preferences"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/preferences"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_preferences"
            android:layout_width="@dimen/seventy_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginStart="@dimen/forty_dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/match_alerts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/fifty_dp"
            android:text="@string/match_alerts"
            android:textColor="@color/white"
            android:textSize="@dimen/thirty_sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_alert"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginLeft="@dimen/ninety_dp"
            android:layout_marginTop="@dimen/forty_dp"
            android:checked="true"
            android:enabled="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/get_ntf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty_dp"
        android:layout_marginStart="@dimen/twenty_dp"
        android:text="@string/get_ntf"
        android:textColor="@color/grey"
        android:textSize="@dimen/twenty_sp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/football"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:src="@drawable/ic_baseline_sports_football_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/football_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawablePadding="@dimen/_200dp"
            android:paddingTop="@dimen/five_dp"
            android:text="@string/football"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tennis"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:src="@drawable/ic_baseline_sports_tennis_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tennis_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingTop="@dimen/five_dp"
            android:text="@string/tennis"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp"

            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/basketball"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:src="@drawable/ic_baseline_sports_basketball_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/basketball_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingTop="@dimen/five_dp"
            android:text="@string/Basketball"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp"

            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hockey"
            android:layout_width="@dimen/forty_dp"
            android:layout_height="@dimen/forty_dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/five_dp"
            android:src="@drawable/ic_baseline_sports_hockey_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hockey_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/twenty_dp"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:paddingTop="@dimen/five_dp"
            android:text="@string/hockey"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cricket"
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:src="@drawable/ic_baseline_sports_hockey_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cricket_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/twenty_dp"
                android:layout_marginTop="5dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingTop="@dimen/five_dp"
                android:text="@string/cricket"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty_sp" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
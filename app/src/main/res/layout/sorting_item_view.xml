<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/brush_icon"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:layout_marginStart="@dimen/twenty_five_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        android:src="@drawable/brush_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/arts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/arts_entertainment"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintBottom_toBottomOf="@id/brush_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@id/brush_icon"
        app:layout_constraintTop_toTopOf="@id/brush_icon" />

    <View
        android:id="@+id/view_recycle_items"
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_dp"
        android:layout_marginStart="@dimen/twenty_five_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        android:layout_marginEnd="@dimen/twenty_five_dp"
        android:background="@color/white2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arts" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/sorting_chipGroup"
        style="@style/Widget.MaterialComponents.ChipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_five_dp"
        android:layout_marginEnd="@dimen/twenty_five_dp"
        android:layout_marginTop="@dimen/thirty_dp"
        app:chipSpacingHorizontal="@dimen/ten_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_recycle_items"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </com.google.android.material.chip.ChipGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
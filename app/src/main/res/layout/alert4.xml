<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_corner">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/error2_png"
        android:layout_width="@dimen/_200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_error_outline_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sure2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:gravity="center"
        android:text="@string/are_you_sure"
        android:textSize="@dimen/forty_sp"
        app:layout_constraintEnd_toEndOf="@id/error2_png"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/error2_png"
        app:layout_constraintTop_toBottomOf="@id/error2_png"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/twenty_dp"
        android:gravity="center"
        android:text="@string/you_won_t_be_able_to_recover"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="@id/sure2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/sure2"
        app:layout_constraintTop_toBottomOf="@id/sure2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/error_message2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:gravity="center"
        android:text="@string/this_file"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="@id/error_message"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/error_message"
        app:layout_constraintTop_toBottomOf="@id/error_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yes_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty_dp"
        android:background="@color/light_green1"
        android:text="@string/yes_delete_it"
        android:textSize="@dimen/twenty_sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/error_message2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/twenty_dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>